-let today= new Date()

<!DOCTYPE html>
html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    script(src="/static/lib.js")
    link(rel="stylesheet", href="/static/css/reset.css")
    link(rel="stylesheet", href="/static/css/grid.css")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous")
    link(rel="stylesheet", href="/static/css/modalwindow.css")
    link(rel="stylesheet", href="/static/css/style.css")
    link(rel="stylesheet", href="/static/css/typography.css")
    block link-css
        link(rel="stylesheet", href="/static/css/main.css")
                //- <link rel="stylesheet" type="text/css" charset="UTF-8" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.css" />
        //- <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick-theme.min.css" />
    block title 
      title Танцевальный клуб Чердак Красноярск | школа танцев, обучение танцам в Красноярске
  body.page
    #modal
    block header
      .header.header__img
        video.video.header__video(src="/static/video/bachata.mp4" autoplay loop)
        block navigation
          div.nav-container
            a.logo.header__logo(href="/")
            #burger-menu
            script(src="/static/burgerMenu.js")
            ul.nav
              li: a.nav__item.typo-nav(href="/events") События
              li: a.nav__item.typo-nav(href="/dance") Направления
              li: a.nav__item.typo-nav(href="/schedule") Расписание
              li: a.nav__item.typo-nav(href="/price") Цены
              li: a.nav__item.typo-nav(href="/teacher") Преподаватели
              li: a.nav__item.typo-nav(href="/about/arenda") Аренда залов
              li: a.nav__item.typo-nav(href="/about") О клубе
              li.social-nets
                //- .social-nets__icon_row
                a.social-nets__icon.vk(href="https://vk.com/tk_cherdak" title="#Хастл#Танго#Сальса - Клуб «ЧЕРДАК» Красноярск")
                  //- i.fab.fa-vk
                a.social-nets__icon.fb(href="https://www.facebook.com/clubcherdak/" title="Cherdak Dance Club / Танцевальный клуб 'Чердак'")
                  //- i.fab.fa-facebook-square
                //- .social-nets__icon_row
                a.social-nets__icon.insta(href="https://www.instagram.com/clubcherdak/" title="@clubcherdak")
                  //- i.fab.fa-instagram  
                a.social-nets__icon.youtube(href="https://www.youtube.com/user/clubcherdak" title="Клуб Чердак")
                  //- i.fab.fa-youtube
              li.contact
                p.department.typo-nav__contact 
                  span Красноярск | Авиаторов
                  //- i.fas.fa-angle-down.department-choose
                p.adress: a.typo-nav__contact(href="about/#map" title="Схема проезда") ул. Авиаторов, 23а
                  //- i.fas.fa-map-marker-alt.special-sign_padding-right                    
                p.phone: a.typo-nav__contact(href="tel: +79631912277" title="Позвоните нам!") 271-22-77 
                  //- i.fas.fa-phone.special-sign_padding-right  
          
        
        block header-content  
          .header-content
            p.typo-slogan Я&nbsp;не&nbsp;хочу этим ничего доказать.
            p.typo-slogan Это ни&nbsp;самовыражение, ни&nbsp;способ высвободить что-либо. 
            p.typo-slogan Я&nbsp;просто танцую. 
            .typo-autor Фред Астер
            i.fas.fa-angle-down.down#scroll_down
    block content
    block footer
      footer.footer-container
        .row-container
          .column-container
            h4.footer-title ПРИСОЕДИНЯЙТЕСЬ К НАМ
            .social-nets-footer
              a.social-nets__icon-footer(href="https://vk.com/tk_cherdak" title="#Хастл#Танго#Сальса - Клуб «ЧЕРДАК» Красноярск")
                i.fab.fa-vk
              a.social-nets__icon-footer(href="https://www.facebook.com/clubcherdak/" title="Cherdak Dance Club / Танцевальный клуб 'Чердак'")
                i.fab.fa-facebook-square
              a.social-nets__icon-footer(href="https://www.instagram.com/clubcherdak/" title="@clubcherdak")
                i.fab.fa-instagram  
              a.social-nets__icon-footer(href="https://www.youtube.com/user/clubcherdak" title="Клуб Чердак")
                i.fab.fa-youtube
          .column-container
            .logo-footer: a(href="/"): img.footer__logo(src="/static/img/logo-footer-w.svg", alt="logo")
            .copyright © Чердак, 2011-#{today.getFullYear()}
          .column-container
            li.contact
                p.department.typo-nav__contact 
                  span Красноярск | Авиаторов
                  //- i.fas.fa-angle-down.department-choose
                p.adress: a.typo-nav__contact(href="about/#map" title="Схема проезда") ул. Авиаторов, 23а
                  //- i.fas.fa-map-marker-alt.special-sign_padding-right                    
                p.phone: a.typo-nav__contact(href="tel: +79631912277" title="Позвоните нам!") 271-22-77 
                  //- i.fas.fa-phone.special-sign_padding-right  
        ul.nav-footer
          li: a.nav__item.typo-nav(href="/events") События
          li: a.nav__item.typo-nav(href="/dance") Направления
          li: a.nav__item.typo-nav(href="/schedule") Расписание
          li: a.nav__item.typo-nav(href="/price") Цены
          li: a.nav__item.typo-nav(href="/teacher") Преподаватели
          li: a.nav__item.typo-nav(href="/about/arenda") Аренда залов
          li: a.nav__item.typo-nav(href="/about") О клубе